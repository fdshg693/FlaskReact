{
  // Set PYTHONPATH for integrated terminal on macOS so terminals inherit project src path
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}/src"
  },
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}\\src"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true
  },
  "editor.formatOnSave": true,
  "ruff.path": [
    "${workspaceFolder}/.venv/bin/ruff"
  ],
  // pyproject.tomlの設定が、エディタの設定より優先して適用される
  "ruff.configurationPreference": "filesystemFirst",
  "ruff.interpreter": [
    "${workspaceFolder}/.venv/bin/python3" //Windowsの場合は、"${workspaceFolder}\\.venv\\Scripts\\python.exe"
  ],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.diagnosticsSource": "Pyright",
  "python.analysis.enableTroubleshootMissingImports": true,
}